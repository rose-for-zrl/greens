.inner-header-icon{  
  width: 40rpx;  
  height: 20rpx;  
  /* line-height: 40rpx; */
  /* margin: 10px 10px;   */
  position: relative;  
  cursor: pointer;  
}
.inner-header-icon text{  
  background-color:#000;  
  position: absolute;  
  border-radius: 1px;  
  transition: .3s cubic-bezier(.8, .5, .2, 1.4);  
  width:100%;  
  height: 2px;  
  transition-duration: 500ms
}
.inner-header-icon text:nth-child(1){
  top:0px;
  left: 0px;
}
.inner-header-icon text:nth-child(2){
  top:13px;  
  left: 0px;  
  opacity:1;
}
.inner-header-icon text:nth-child(3){  
  bottom:0px;  
  left: 0px;
}
.inner-header-icon:not(.open):hover text:nth-child(1){
  transform: rotate(-3deg) scaleY(1.1);
}
.inner-header-icon:not(.open):hover text:nth-child(2){  
  transform: rotate(3deg) scaleY(1.1);
}
.inner-header-icon:not(.open):hover text:nth-child(3){  
  transform: rotate(-4deg) scaleY(1.1);
}
.inner-header-icon.open text:nth-child(1){  
  transform: rotate(45deg);
  top: 7px;
}
.inner-header-icon.open text:nth-child(2){  
  opacity:0;
}
.inner-header-icon.open text:nth-child(3){  
  transform: rotate(-45deg);
  top: 7px;
}
/** 菜单下拉 */
.box {
  display: flex;
  width: 100%;
  position: absolute;
  top: 101%;
  left: 0;
  height: 0px;
  overflow: hidden;
  background: rgba(255,255,255,0.85);
  display: grid;
  grid-gap: 20px;
  transition: height 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  z-index: 0;
  color: #333;
}
.box-line {
  width: 100%;
}
.box-show {
  height: 10px;
  padding: 20px;
  transition-duration: 1s;
}
.box-line-show {
  opacity: 1;
  transition-duration:1s;
}