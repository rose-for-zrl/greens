.banner {
  width: 100%;
  height: 1200rpx;
}

.banner image {
  width: 100%;  
  height: 1200rpx;
}

.container .dots {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  display: flex;
}
.container .dots .item {
  background: rgba(255,255,255,0);
  height: 120rpx;
  width: 33.3%;
  font-weight:bold;
  color: beige;
  text-align: center; /** 水平居中 */
  line-height: 120rpx; /** 垂直居中 */
  padding-top: 3rpx red;
}
.container .dots .item:last-child {
  margin-right: 0;
}